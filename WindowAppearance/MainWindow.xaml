<Window x:Class="WindowAppearance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowAppearance"
        mc:Ignorable="d" Icon="rocket_space_icon.ico"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Button x:Name="ResizeModeButton" Click="ResizeModeButton_Click">Open Resize Mode Window</Button>
        <Button x:Name="NonRectangularButton" Click="NonRectangularButton_Click">Open Non-Rectangula Window</Button>
    </StackPanel>
</Window>
